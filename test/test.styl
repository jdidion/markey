@import 'nib'
@import 'lost'
@import 'typographic'

flexbox = true
header-font = franklin
body-font = franklin
min-font = 20px

typographic()

edit(green)

header
  text-align center

article
  flex-container()
  
article > div
  column('1/3')

div#left
  width 15%

div#middle
  width 65%

div#middle > section
  column('1/3', cycle: 3)

div#right
  width 15%
